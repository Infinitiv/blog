<article>
  <% if current_user %>
    <div class="right">
      <%= link_to edit_ask_path(ask), title: 'Редактировать статью' do %>
	<i class="fi-page-edit"></i>
      <% end %>
      <%= link_to(ask_path(ask), confirm: 'Уверены?', method: :delete, data: {remote: true}) do %>
	<i class="fi-x" title="Удалить"></i>
      <% end %>
    </div>
  <% end %>
<p class="text-justify clearfix <%= "pink" unless ask.answer%>">
<strong>Q: </strong>
<%= ask.question %>
</p>
<p>
<strong>A: </strong>
<%= ask.answer if ask.answer %>
</p>
<p class=subscript>
Оставлено здесь&nbsp;
<%= time_tag ask.created_at, :format => :short, :pubdate => true %></p>
</article>